<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/spacing_single">

  <TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@style/TextAppearance.Holo.MediumLarge"
    android:text="Youtube.com: A story about a tank"
    android:textColor="@color/blue" />

  <LinearLayout
    android:id="@+id/wrap_meta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/title"
    android:gravity="left|center">

    <TextView
      style="@style/meta"
      android:id="@+id/timestamp"
      android:text="4 hours ago" />

    <TextView
      style="@style/meta"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" by " />

    <include
      layout="@layout/list_item_feed_tpl_user_small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>
</RelativeLayout><!-- From: file:/Users/karllindmark/Documents/Git/com.ninetwozero.bf4intel/BF4%20Intel/src/main/res/layout/list_item_news.xml -->