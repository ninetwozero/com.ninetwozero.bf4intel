<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/spacing_single">

  <TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@style/TextAppearance.Holo.MediumLarge"
    android:text="Dummy thread #0001"
    android:textColor="@color/blue" />

  <LinearLayout
    android:id="@+id/wrap_creator"
    android:layout_below="@id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center">

    <TextView
      style="@style/meta"
      android:id="@+id/string_creator"
      android:text="Created by " />

    <include layout="@layout/list_item_feed_tpl_user_small" />

    <TextView
      style="@style/meta"
      android:id="@+id/creation_timestamp"
      android:text=" 4 hours ago" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/wrap_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/wrap_creator"
    android:gravity="left|center">

    <TextView
      style="@style/meta"
      android:id="@+id/string_lastuser"
      android:text="Latest activity " />

    <TextView
      style="@style/meta"
      android:id="@+id/last_timestamp"
      android:text="4 hours ago" />

    <TextView
      style="@style/meta"
      android:text=" by " />

    <include layout="@layout/list_item_feed_tpl_user_small" />
  </LinearLayout>
</RelativeLayout><!-- From: file:/Users/karllindmark/Documents/Git/com.ninetwozero.bf4intel/BF4%20Intel/src/main/res/layout/list_item_thread.xml -->