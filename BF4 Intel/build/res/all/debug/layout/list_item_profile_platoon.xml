<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="56dp"
  android:padding="@dimen/spacing_single">

  <ImageView
    android:id="@+id/platoon_image"
    android:layout_width="48dp"
    android:layout_height="48dp" />

  <TextView
    android:id="@+id/platoon_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@android:style/TextAppearance.Holo.Medium"
    android:layout_toRightOf="@id/platoon_image"
    android:layout_marginLeft="@dimen/spacing_single"
    android:layout_marginTop="@dimen/spacing_half" />

  <ImageView
    android:id="@+id/platoon_platform"
    android:layout_width="39dp"
    android:layout_height="11dp"
    android:layout_toRightOf="@id/platoon_image"
    android:layout_marginLeft="@dimen/spacing_single"
    android:layout_below="@id/platoon_name"
    android:contentDescription="@string/cdesc_platform_icon" />
</RelativeLayout><!-- From: file:/Users/karllindmark/Documents/Git/com.ninetwozero.bf4intel/BF4%20Intel/src/main/res/layout/list_item_profile_platoon.xml -->