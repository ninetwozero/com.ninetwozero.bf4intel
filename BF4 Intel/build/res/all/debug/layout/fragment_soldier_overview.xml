<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/test_soldier_bg"
  android:orientation="vertical"
  android:padding="@dimen/spacing_single">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@android:style/TextAppearance.Holo.Large"
    android:textColor="@color/blue"
    android:text="NINETWOZERO" />

  <RelativeLayout
    android:id="@+id/wrap_progress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      style="@style/heading"
      android:id="@+id/heading_progress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="PROGRESS" />

    <TextView
      android:id="@+id/current_rank_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="MASTER GUNNERY SERGEANT 2 STAR"
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:layout_below="@id/heading_progress" />

    <ImageView
      android:id="@+id/image_rank"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:src="@drawable/test_rank31"
      android:layout_alignParentRight="true"
      android:layout_marginTop="@dimen/spacing_double"
      android:contentDescription="@string/cdesc_rank_image" />

    <ProgressBar
      style="?android:attr/progressBarStyleHorizontal"
      android:id="@+id/progress_rank"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/image_rank"
      android:layout_below="@id/current_rank_title"
      android:indeterminate="false" />

    <TextView
      android:id="@+id/value_rank_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="29,613/50,000"
      android:layout_below="@id/progress_rank"
      android:layout_alignLeft="@id/progress_rank"
      android:textAppearance="@android:style/TextAppearance.Holo" />

    <TextView
      android:id="@+id/value_rank_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/soldier_left_until_rankup"
      android:layout_below="@id/progress_rank"
      android:layout_alignRight="@id/progress_rank"
      android:textAppearance="@android:style/TextAppearance.Holo.Small" />
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/wrap_service_stars"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      style="@style/heading"
      android:id="@+id/heading_service_stars"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/service_stars" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="SERVICE STARS HERE"
      android:gravity="center"
      android:layout_below="@id/heading_service_stars"
      android:textAppearance="@android:style/TextAppearance.Holo.Large" />
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/wrap_average_scores"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      style="@style/heading"
      android:id="@+id/heading_average_scores"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/soldier_quick_stats" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="QUICK STATS HERE"
      android:gravity="center"
      android:layout_below="@id/heading_average_scores"
      android:textAppearance="@android:style/TextAppearance.Holo.Large" />
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/wrap_detailed_scores"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      style="@style/heading"
      android:id="@+id/heading_detailed_scores"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/soldier_detailed_stats" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="DETAILED STATS HERE"
      android:gravity="center"
      android:layout_below="@id/heading_detailed_scores"
      android:textAppearance="@android:style/TextAppearance.Holo.Large" />
  </RelativeLayout>

  <!-- TODO: This should probably (maybe) be ListRow'd -->

  <ListView
    android:id="@android:id/list"
    android:layout_width="0dp"
    android:layout_height="0dp" />

  <TextView
    android:id="@android:id/empty"
    android:layout_width="0dp"
    android:layout_height="0dp" />
</LinearLayout><!-- From: file:/Users/karllindmark/Documents/Git/com.ninetwozero.bf4intel/BF4%20Intel/src/main/res/layout/fragment_soldier_overview.xml -->