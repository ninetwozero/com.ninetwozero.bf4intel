<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/wrap_soldiers"
  style="@style/SlidingMenuRow">

  <ImageView
    android:id="@+id/soldier_image"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:contentDescription="@string/cdesc_soldier_avatar" />

  <TextView
    android:id="@+id/soldier_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
    android:layout_toRightOf="@id/soldier_image"
    android:layout_marginLeft="@dimen/spacing_single"
    android:layout_marginTop="@dimen/spacing_half" />

  <ImageView
    android:id="@+id/soldier_platform"
    android:layout_width="39dp"
    android:layout_height="11dp"
    android:layout_below="@id/soldier_name"
    android:layout_toRightOf="@id/soldier_image"
    android:layout_marginLeft="@dimen/spacing_single"
    android:contentDescription="@string/cdesc_platform_icon" />

  <ImageView
    android:id="@+id/soldier_rank"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginTop="@dimen/spacing_half"
    android:layout_alignParentRight="true"
    android:contentDescription="@string/cdesc_rank_image" />
</RelativeLayout><!-- From: file:/Users/karllindmark/Documents/Git/com.ninetwozero.bf4intel/BF4%20Intel/src/main/res/layout/side_soldier_box.xml -->