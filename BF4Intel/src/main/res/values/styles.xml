<resources>

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Light">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <item name="android:icon">@drawable/ic_actionbar_logo</item>
  </style>

  <style name="AppThemeSpecialSpecial" parent="AppTheme">
    <item name="android:homeAsUpIndicator">@drawable/ic_navigation_drawer</item>
    <item name="android:icon">@drawable/ic_actionbar_logo</item>
  </style>

  <style name="separator">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">#FFCCCCCC</item>
    <item name="android:layout_marginTop">@dimen/spacing_single</item>
    <item name="android:layout_marginBottom">@dimen/spacing_single</item>
  </style>

  <style name="heading">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
    <item name="android:textColor">@android:color/darker_gray</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:paddingTop">@dimen/spacing_half</item>
    <item name="android:paddingBottom">@dimen/spacing_half</item>
  </style>


  <style name="meta">
    <item name="android:id">@+id/timestamp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
    <item name="android:layout_marginTop">@dimen/spacing_half</item>
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="TextAppearance.Holo.MediumLarge" parent="@android:style/TextAppearance.Holo.Medium">
    <item name="android:textSize">@dimen/text_ml</item>
  </style>

  <style name="TextAppearance.Holo.Huge" parent="@android:style/TextAppearance.Holo.Large">
    <item name="android:textSize">@dimen/text_xxl</item>
  </style>

  <!-- MENU -->

  <style name="SlidingMenuRow">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/spacing_single</item>
    <item name="android:paddingRight">@dimen/spacing_single</item>
    <item name="android:paddingBottom">@dimen/spacing_single</item>
    <item name="android:paddingLeft">@dimen/spacing_single</item>
    <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!-- Soldier "card" pseudo style -->
  <style name="WhiteContainer">
    <item name="android:padding">@dimen/spacing_single</item>
    <item name="android:background">@android:color/white</item>
    <item name="android:layout_marginBottom">@dimen/spacing_single</item>
  </style>

  <!-- FEED -->

  <style name="feed_wrap_user">
    <item name="android:id">@+id/wrap_user</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">left|center</item>
    <item name="android:layout_marginBottom">@dimen/spacing_half</item>
  </style>


  <style name="feed_avatar">
    <item name="android:id">@+id/avatar</item>
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="feed_username">
    <item name="android:id">@+id/username</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>

    <item name="android:textColor">@color/blue</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
    <item name="android:layout_marginLeft">@dimen/spacing_single</item>
    <item name="android:layout_toRightOf">@id/avatar</item>
  </style>

  <style name="feed_content">
    <item name="android:id">@+id/content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Holo</item>
    <item name="android:layout_below">@id/wrap_user</item>
    <item name="android:layout_marginTop">@dimen/spacing_single</item>
  </style>

</resources>
