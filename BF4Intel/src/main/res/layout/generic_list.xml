<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/card_activity_bg"
  >

  <ListView
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_m"
    android:dividerHeight="@dimen/spacing_m"
    android:divider="@color/card_activity_bg"
    android:clipToPadding="false"
    android:scrollbarStyle="outsideOverlay"
    />

  <TextView
    style="@style/DefaultEmptyText"
    android:id="@android:id/empty"
    />

  <include layout="@layout/loading_progress" />

  <include
    android:id="@+id/inline_error_message"
    layout="@layout/inlined_error_message"
    />
</RelativeLayout>