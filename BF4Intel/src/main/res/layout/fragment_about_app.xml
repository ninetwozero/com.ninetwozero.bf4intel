<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/spacing_m"
  android:paddingLeft="@dimen/spacing_m"
  android:paddingRight="@dimen/spacing_m"
  android:paddingBottom="@dimen/spacing_m"
  android:background="@color/card_activity_bg"
  >
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_bg"
    android:padding="@dimen/spacing_m"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    >
    <LinearLayout
      android:id="@+id/wrap_version"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical"
      android:layout_marginBottom="@dimen/spacing_l"
      >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/about_title_text"
        />

      <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/about_subtitle_text"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:text="@string/app_email"
        />
    </LinearLayout>
    <TextView
      style="@style/RegularCardTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/msg_about_help_heading"
      />

    <TextView
      style="@style/RegularCardSubtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/msg_about_help_text"
      />

    <Button
      style="@style/BlueButton"
      android:id="@+id/button_email"
      android:layout_width="@dimen/card_big_button_width"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/msg_info_email"
      android:layout_marginTop="@dimen/spacing_l"
      />
    <Button
      style="@style/BlueButton"
      android:id="@+id/button_gplus"
      android:layout_width="@dimen/card_big_button_width"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/msg_info_join_gplus"
      android:layout_marginTop="@dimen/spacing_m"
      />
    <Button
      style="@style/BlueButton"
      android:id="@+id/button_tweet"
      android:layout_width="@dimen/card_big_button_width"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/msg_info_join_tweet"
      android:layout_marginTop="@dimen/spacing_m"
      />
  </LinearLayout>
</ScrollView>
