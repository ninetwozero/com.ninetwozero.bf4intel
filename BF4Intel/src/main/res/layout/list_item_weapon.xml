<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/index"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_xl"
      android:layout_gravity="center_vertical" />

    <ImageView
      android:id="@+id/weapon_image"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_weight="1"
      android:contentDescription="@string/cdesc_weapon_stats_image"
      />

    <include
      layout="@layout/service_stars_count" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/weapon_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_m"
      android:layout_weight="1"
      />

    <TextView
      android:id="@+id/weapon_kills"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_m"
      android:paddingRight="@dimen/spacing_xs"
      />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/weapon_unlocks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ProgressBar
      android:id="@+id/weapon_unlock_progress"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      style="@android:style/Widget.Holo.ProgressBar.Horizontal"
      android:max="100"
      android:progress="88"
      />

    <TextView
      android:id="@+id/weapon_unlock_scores"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_m"
      android:paddingRight="@dimen/spacing_xs"
      />
  </LinearLayout>
</LinearLayout>