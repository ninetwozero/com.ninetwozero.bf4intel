<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/WhiteContainerFeed">
  <include layout="@layout/list_item_feed_tpl_top"/>
  <RelativeLayout
    style="@style/WhiteContainerContentAreaWrapper"
    android:id="@+id/wrap_content_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <TextView
    style="@style/feed_content"
    android:id="@+id/content"
    android:text="Have you guys seen this video? It's awesome!"/>

  <LinearLayout
    android:id="@+id/wrap_preview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/content"
    android:visibility="gone">

    <TextView
      android:id="@+id/preview_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@android:style/TextAppearance.Holo.Small"
      android:text="Youtube.com: A story about a tank"
      android:layout_marginTop="@dimen/spacing_m"
      android:layout_below="@id/content"/>

    <ImageView
      android:id="@+id/link_image"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_gravity="center"
      android:src="@drawable/slidingmenu_background"
      android:layout_marginTop="@dimen/spacing_xs"
      android:layout_below="@id/preview_title"
      android:contentDescription="@string/cdesc_status_link_image"/>
  </LinearLayout>

  <TextView
    style="@style/meta"
    android:text="4 hours ago"
    android:layout_below="@id/wrap_preview"/>

  </RelativeLayout>
</LinearLayout>