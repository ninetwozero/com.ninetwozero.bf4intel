<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/WhiteContainerFeed">

  <include layout="@layout/list_item_feed_tpl_top"/>

  <RelativeLayout
    style="@style/WhiteContainerContentAreaWrapper"
    android:id="@+id/wrap_content_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/rank_image"
      android:layout_width="128dp"
      android:layout_height="128dp"
      android:layout_centerInParent="true"
      android:layout_marginTop="@dimen/spacing_l"
      android:src="@drawable/r0"/>

    <TextView
      android:id="@+id/rank_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:textColor="@color/blue"
      android:layout_below="@id/rank_image"
      android:layout_centerHorizontal="true"/>

    <TextView
      style="@style/meta"
      android:layout_below="@id/game_name"/>
  </RelativeLayout>
</LinearLayout>