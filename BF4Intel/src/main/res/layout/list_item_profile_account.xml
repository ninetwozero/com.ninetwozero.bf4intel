<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/spacing_m"
  android:orientation="vertical">

  <TextView
    style="@style/heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/profile_information_header" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/label_user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="NAME: "
      android:textAppearance="@android:style/TextAppearance.Holo" />

    <TextView
      android:id="@+id/user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/label_user_name"
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:textColor="@android:color/holo_blue_light" />

    <TextView
      android:id="@+id/label_user_age"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="AGE: "
      android:layout_below="@id/user_name"
      android:textAppearance="@android:style/TextAppearance.Holo" />

    <TextView
      android:id="@+id/user_age"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/label_user_age"
      android:layout_below="@id/user_name"
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:textColor="@android:color/holo_blue_light" />

    <TextView
      android:id="@+id/label_user_enlistdate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ENLISTED: "
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:layout_below="@id/user_age" />

    <TextView
      android:id="@+id/user_enlistdate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/label_user_enlistdate"
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:textColor="@android:color/holo_blue_light"
      android:layout_below="@id/user_age" />

    <TextView
      android:id="@+id/label_user_country"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="COUNTRY: "
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:layout_below="@id/user_enlistdate" />

    <TextView
      android:id="@+id/user_country"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@android:style/TextAppearance.Holo"
      android:textColor="@android:color/holo_blue_light"
      android:layout_below="@id/user_enlistdate"
      android:layout_toRightOf="@id/label_user_country" />
  </RelativeLayout>

  <TextView
    style="@style/heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/profile_presentation_header"
    android:layout_marginTop="@dimen/spacing_s" />

  <TextView
    android:id="@+id/user_presentation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@android:style/TextAppearance.Holo" />
</LinearLayout>