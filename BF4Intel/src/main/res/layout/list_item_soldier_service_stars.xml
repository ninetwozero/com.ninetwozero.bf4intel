<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:paddingTop="@dimen/spacing_s"
  android:paddingBottom="@dimen/spacing_s"
  >

  <ImageView
    android:id="@+id/image"
    android:layout_width="@dimen/service_star_size"
    android:layout_height="@dimen/service_star_size"
    android:contentDescription="@string/cdesc_service_star"
    android:src="@drawable/kit_icon_engineer"
    />

  <TextView
    android:id="@+id/service_star_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/image"
    android:layout_alignRight="@id/image"
    android:textAppearance="@style/TextAppearance.Holo.Smallest"
    />

  <ProgressBar
    style="?android:attr/progressBarStyleHorizontal"
    android:id="@+id/progressbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:indeterminate="false"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/spacing_m"
    android:layout_toRightOf="@id/image"
    />
</RelativeLayout>