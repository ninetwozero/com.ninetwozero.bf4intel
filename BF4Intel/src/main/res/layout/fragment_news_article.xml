<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#DDD"
  >
  <RelativeLayout
    android:id="@+id/wrap_form"
    android:layout_width="match_parent"
    android:layout_height="@dimen/send_button_size"
    android:layout_alignParentBottom="true"
    android:background="#FFF"
    >
    <ImageView
      android:id="@+id/button_send"
      android:layout_width="@dimen/send_button_size"
      android:layout_height="@dimen/send_button_size"
      android:text="@string/label_comment"
      android:layout_alignParentRight="true"
      android:src="@drawable/ic_menu_send"
      />
    <EditText
      android:id="@+id/input_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/button_send"
      android:inputType="text"
      android:hint="@string/hint_comment"
      android:layout_alignBottom="@id/button_send"
      />
  </RelativeLayout>
  <ListView
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/wrap_form"
    android:headerDividersEnabled="false"
    />
  <ScrollView
    android:id="@android:id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_above="@id/wrap_form">
    <include
      android:id="@+id/header_when_empty"
      layout="@layout/list_header_news_article"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />
  </ScrollView>
  <LinearLayout
    android:id="@+id/wrap_loading_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:gravity="center"
    android:background="#FFF"
    >
      <ProgressBar
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        />
    </LinearLayout>
</RelativeLayout>