<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/award_ribbon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/award_completion"
      android:layout_centerHorizontal="true"
      android:src="@drawable/awards_ribbon01"
      android:contentDescription="@string/cdesc_award_ribbon" />

    <TextView
      android:id="@+id/ribbons_count"
      style="@style/GridItemCount"
      android:layout_below="@id/award_ribbon"
      android:layout_alignParentRight="true" />
    </RelativeLayout>

  <RelativeLayout
    android:id="@+id/colour_overlay_ribbon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_locked_overlay" />
</FrameLayout>