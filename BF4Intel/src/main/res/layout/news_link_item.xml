<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/news_link_item_bg"
  android:padding="@dimen/news_link_item_padding"
  android:orientation="vertical"
  android:clickable="true"
  >
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_link_item_selector"
    android:orientation="vertical"
    android:padding="@dimen/spacing_s"
    >

    <TextView
      android:id="@+id/link_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@android:style/TextAppearance.Holo.Small"
      />

    <TextView
      android:id="@+id/link_url"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:color="@color/lightgrey"
      android:textAppearance="@style/TextAppearance.Holo.Smallest"
      android:singleLine="true"
      android:ellipsize="end"
      />
  </LinearLayout>
</LinearLayout>