<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <ImageView
    android:id="@+id/reward_image"
    android:layout_width="@dimen/reward_image_width"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:contentDescription="@string/cdesc_reward_image"
    android:adjustViewBounds="true"
    android:layout_marginTop="@dimen/spacing_m"
    android:layout_marginBottom="@dimen/spacing_m"
    android:layout_below="@id/string_reward"
    />
  <TextView
    android:id="@+id/reward_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/reward_image"
    />
</RelativeLayout>