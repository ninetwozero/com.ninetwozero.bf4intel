<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/lightgrey"
      android:padding="@dimen/spacing_m">

      <RelativeLayout
        android:id="@+id/wrap_soldier_general"
        style="@style/WhiteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/heading_progress"
          style="@style/heading"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/navigationdrawer_overview"/>

        <TextView
          android:id="@+id/soldier_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/heading_progress"
          android:textAppearance="@android:style/TextAppearance.Holo.Large"
          android:textColor="@color/blue"/>

        <ImageView
          android:id="@+id/image_rank"
          android:layout_width="64dp"
          android:layout_height="64dp"
          android:src="@drawable/test_rank31"
          android:layout_alignParentRight="true"
          android:layout_marginTop="@dimen/spacing_l"
          android:contentDescription="@string/cdesc_rank_image"/>

        <TextView
          android:id="@+id/current_rank_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/image_rank"
          android:textAllCaps="true"
          android:textAppearance="@android:style/TextAppearance.Holo.Small"/>

        <ProgressBar
          android:id="@+id/progress_rank"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/current_rank_title"
          android:indeterminate="false"/>

        <TextView
          style="@style/meta"
          android:id="@+id/value_rank_progress"
          android:layout_alignParentRight="true"
          android:layout_below="@id/progress_rank"/>
      </RelativeLayout>

      <LinearLayout
        android:id="@+id/wrap_soldier_skills"
        style="@style/WhiteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/wrap_soldier_general">

        <TextView
          android:id="@+id/heading_average_scores"
          style="@style/heading"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/soldier_skill"/>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/soldier_rating"
          android:textAllCaps="true"
          android:textColor="@color/darkgrey"
          />

        <TextView
          android:id="@+id/rating"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:textSize="@dimen/text_xxl"
          />

        <TableLayout
          android:id="@+id/skills_table"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/spacing_s">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:baselineAligned="false"
            >

            <include
              layout="@layout/list_item_soldier_skills"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>

            <include
              layout="@layout/list_item_soldier_skills"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>

            <include
              layout="@layout/list_item_soldier_skills"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:baselineAligned="false"
            >

            <include
              layout="@layout/list_item_soldier_skills"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>

            <include
              layout="@layout/list_item_soldier_skills"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>

            <include
              layout="@layout/list_item_soldier_skills"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>
          </LinearLayout>
        </TableLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/wrap_soldier_service_stars"
        style="@style/WhiteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/wrap_soldier_skills">

        <TextView
          android:id="@+id/heading_service_stars"
          style="@style/heading"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/service_stars"/>

        <LinearLayout
          android:id="@+id/content_area"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <include
            layout="@layout/list_item_soldier_service_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

          <include
            layout="@layout/list_item_soldier_service_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

          <include
            layout="@layout/list_item_soldier_service_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

          <include
            layout="@layout/list_item_soldier_service_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

          <include
            layout="@layout/list_item_soldier_service_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/wrap_soldier_top3_weapons"
        style="@style/WhiteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/wrap_soldier_service_stars">

        <TextView
          android:id="@+id/heading_top3_weapons"
          style="@style/heading"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/soldier_top_weapons"/>

        <LinearLayout
          android:id="@+id/content_area"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/wrap_soldier_top3_vehicles"
        style="@style/WhiteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/wrap_soldier_top3_weapons">

        <TextView
          android:id="@+id/heading_top3_vehicles"
          style="@style/heading"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/soldier_top_vehicles"/>

        <LinearLayout
          android:id="@+id/content_area"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/wrap_soldier_completions"
        style="@style/WhiteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:layout_below="@id/wrap_soldier_top3_vehicles">

        <TextView
          android:id="@+id/heading_detailed_scores"
          style="@style/heading"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/soldier_completion"/>

        <LinearLayout
          android:id="@+id/content_area"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>
  </ScrollView>

  <include layout="@layout/loading_progress" />
</RelativeLayout>