<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/wrap_comment_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
    >
        <EditText
            android:id="@+id/input_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ex: This is some great news"
            android:layout_weight="0.8"
            android:singleLine="true"
            android:layout_marginRight="8dp"
        />

        <Button
            android:id="@+id/button_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:layout_weight="0.2"
            android:text="@string/ab_action_send"
        />
    </LinearLayout>

  <ListView
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/wrap_comment_form" />

  <LinearLayout
    android:id="@android:id/empty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_above="@id/wrap_comment_form"
  >
    <include layout="@layout/list_header_news_item" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="No comments found."
      android:gravity="center"/>
  </LinearLayout>
</RelativeLayout>