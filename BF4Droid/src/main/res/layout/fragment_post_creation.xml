<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/wrap_form"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp">

  <TextView
    style="@style/heading"
    android:id="@+id/update_status_header"
    android:text="@string/create_post_header"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp" />

  <EditText
    android:id="@+id/update_status_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/create_post_hint"
    android:layout_below="@id/update_status_header" />
</RelativeLayout>