<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Holo.MediumLarge"
        android:text="Youtube.com: A story about a tank"
        android:textColor="@color/blue"
    />
    <TextView
        style="@style/meta"
        android:id="@+id/timestamp"
        android:text="4 hours ago"
        android:layout_below="@id/title"
    />
    <TextView
        style="@style/meta"
        android:id="@+id/string_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" by "
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/timestamp"
    />
    <ImageView
        style="@style/meta"
        android:id="@+id/avatar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/test_gravatar"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/string_by"
    />

    <TextView
        style="@style/meta"
        android:id="@+id/username"
        android:text="NINETWOZERO"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/blue"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/avatar"
        />
</RelativeLayout>