<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/wrap_form"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp">

  <TextView
    style="@style/heading"
    android:id="@+id/string_content"
    android:text="What's on your mind?"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp" />

  <EditText
    android:id="@+id/input_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="I like this game, it's nice."
    android:layout_below="@id/string_content"
    android:gravity="top|left"
    android:maxLength="200"
    android:maxLines="8" />

  <TextView
    style="@style/heading"
    android:id="@+id/string_extra"
    android:text="Attach item to post"
    android:layout_below="@id/input_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="16dp" />

  <EditText
    android:id="@+id/input_extra"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="http://"
    android:layout_below="@id/string_extra"
    android:inputType="textUri" />
</RelativeLayout>